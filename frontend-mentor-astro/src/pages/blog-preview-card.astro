---
import Card from '@components/blog-preview/Card.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<div class='container'>
		<Card />
	</div>
</Layout>

<style>
	:root {
		--yellow: hsl(47, 88%, 63%);
		--white: hsl(0, 0%, 100%);
		--grey-500: hsl(0, 0%, 42%);
		--grey-950: hsl(0, 0%, 7%);
	}

	body {
		background-color: var(--yellow);
		font-family: 'Figtree-Variable', sans-serif;
	}

	.container {
		display: flex;
		align-items: center;
		justify-content: center;
		height: 100%;
	}

	@font-face {
		font-family: 'Figtree-Variable';
		src: url('/fonts/blog-preview/Figtree-Variable.ttf') format('truetype');
		font-weight: 500 800;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'Figtree-Italic-Variable';
		src: url('/fonts/blog-preview/Figtree-Italic-Variable.ttf') format('truetype');
		font-weight: 500 800;
		font-style: normal;
		font-display: swap;
	}
</style>
